<div class="page=header">
  <h1>Art & Literary Products</h1>
</div>

<%= link_to "Add a new product", new_product_path, class: 'btn btn-primary btn-info new-button' %>

<table class="table table-striped table-hover">
  <tr>
    <th>Id</th>
    <th>Name</th>
    <th>Description</th>
    <th>User</th>
    <th></th>
    <th></th>
  </tr>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.id %></td>
        <td><%= link_to product.name.titleize, product_path(product) %></td>
        <td><%= product.description %></td>
        <td><%= product.user.email %></td>
        <% if is_allowed(product.user.id) %>
          <td><%= link_to 'Edit', edit_product_path(product), class: 'btn btn-primary btn-success' %></td>
          <td><%= link_to 'Delete', product_path(product), method: :delete, data: { confirm:'Are you sure?' }, class: 'btn btn-primary btn-danger' %></td>
        <% end %>
        <td></td>
        <td></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @products %>
<br />

