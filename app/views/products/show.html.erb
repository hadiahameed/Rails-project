<div id="notice"><%= notice %></div>

<div>
  <b>Name:</b>
  <%= @product.name.titleize %>
</div>

<div>
  <b>Description:</b>
  <%= @product.description %>
</div>

<div>
  <b>Image:</b>
  <% @product.attachments.each do |attachment| %>
    <div>
      <%= image_tag attachment.photo.url(:medium) %>
    </div>
  <% end %>
</div>

<h2>Comments:</h2>

<div class='comment-page' >
  <%= render @comments %>
</div>

<h2> Add a comment </h2>
<%= render "comments/form" %>
<% if is_allowed(@product.user.id) %>
  <%= link_to 'Edit', edit_product_path(@product) %> |
<% end %>
<%= link_to 'Back', products_path %>
